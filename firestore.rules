rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access
    match /blog/{document} {
      allow read: if true;
    }
    match /courses/{document} {
      allow read: if true;
    }
    match /faqs/{document} {
      allow read: if true;
    }
    match /quizSets/{document} {
      allow read: if true;
    }
     match /siteBanners/{document} {
      allow read: if true;
    }
     match /promotionalPosters/{document} {
      allow read: if true;
    }

    // Authenticated users can read all user/trainer profiles but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /trainers/{trainerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == trainerId;
    }
    
    // Admins can read/write their own profile
    match /admins/{adminId} {
      allow read, write: if request.auth != null && request.auth.uid == adminId;
    }

    // Feedback can be read by any authenticated user, but only created/updated by the customer who owns it
    match /feedback/{feedbackId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.customerId == request.auth.uid;
        allow update: if request.auth != null && resource.data.customerId == request.auth.uid;
        allow delete: if false; // Disallow deleting feedback for now
    }
    
    // Referrals can be read by any authenticated user
     match /referrals/{referralId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // Allow admin to update status
    }
    
    // Reschedule requests can be read by any authenticated user
    match /rescheduleRequests/{requestId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update: if request.auth != null; // Allow admin/trainer to update status
    }

    // Default deny for any other collection
     match /{document=**} {
      allow read, write: if false;
    }
  }
}
