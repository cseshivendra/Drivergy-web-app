
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to read from users and trainers collections
    // This is required to fetch profile data upon login.
    // Writes are restricted to the owner of the document.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isOwner(userId);
    }
    
    match /trainers/{userId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isOwner(userId);
    }

    // Public collections that anyone can read for the site content
    match /blog/{postId} {
      allow read: if true;
      allow write: if false; // Managed by admin server actions
    }

    match /courses/{courseId} {
      allow read: if true;
      allow write: if false; // Managed by admin server actions
    }

    match /faqs/{faqId} {
      allow read: if true;
      allow write: if false; // Managed by admin server actions
    }
    
    match /quizSets/{quizSetId} {
      allow read: if true;
      allow write: if false; // Managed by admin server actions
    }

    match /promotionalPosters/{posterId} {
      allow read: if true;
      allow write: if false; // Managed by admin server actions
    }

    match /siteBanners/{bannerId} {
      allow read: if true;
      allow write: if false; // Managed by admin server actions
    }

    // Allow authenticated users to manage their own feedback and reschedule requests
    match /feedback/{feedbackId} {
        allow create: if isAuthenticated();
        allow read: if isAuthenticated(); // Or make public if needed
    }
    
    match /rescheduleRequests/{requestId} {
        allow create: if isAuthenticated();
        allow read, update: if isAuthenticated(); // Allow trainer/admin to update
    }
    
    match /referrals/{referralId} {
       allow read: if isAuthenticated();
       allow create: if isAuthenticated();
    }
  }
}
