
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Notifications: Allow a user to read their own notifications.
    // This requires a rule that allows a 'list' operation on the collection
    // for queries filtered by the user's ID.
    match /notifications/{notificationId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }


    // Allow users to read and write their own profile data
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // Allow trainers to read and write their own profile data
    match /trainers/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Public collections that anyone can read
    match /blog/{postId} {
      allow read: if true;
    }
    match /courses/{courseId} {
      allow read: if true;
    }
    match /faqs/{faqId} {
      allow read: if true;
    }
    match /quizSets/{setId} {
      allow read: if true;
    }
    match /siteBanners/{bannerId} {
        allow read: if true;
    }
    match /promotionalPosters/{posterId} {
        allow read: if true;
    }

    // Default deny all reads and writes to all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
