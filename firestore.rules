
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Collections that are public-readable for the site
    match /faqs/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /blogPosts/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /siteBanners/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /promotionalPosters/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /courses/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /quizSets/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User collection: anyone can create for registration, but only you can read/write your own data.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if true;
    }
    
    // Other collections need authentication.
    match /lessonRequests/{reqId} {
      allow read, write: if request.auth != null;
    }
    
    match /rescheduleRequests/{reqId} {
      allow read, write: if request.auth != null;
    }
    
    match /feedback/{feedbackId} {
      allow read, write: if request.auth != null;
    }
    
    match /referrals/{referralId} {
      allow read, write: if request.auth != null;
    }
  }
}
