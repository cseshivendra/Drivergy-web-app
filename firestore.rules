
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all writes from the client
    // All writes should go through secure server-side actions
    allow write: if false;

    // Users can read their own profile, admins can read any profile
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    
    // Allow anyone to read public content collections
    match /blog/{postId} {
      allow read: if true;
    }
    match /courses/{courseId} {
      allow read: if true;
    }
    match /faqs/{faqId} {
      allow read: if true;
    }
    match /promotionalPosters/{posterId} {
      allow read: if true;
    }
    match /quizSets/{quizId} {
      allow read: if true;
    }
    match /siteBanners/{bannerId} {
      allow read: if true;
    }

    // Admins can read collections needed for dashboards
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /feedback/{feedbackId} {
      allow read: if isAdmin();
    }
    match /lessonRequests/{reqId} {
      allow read: if isAdmin();
    }
    match /referrals/{refId} {
      allow read: if isAdmin();
    }
     match /rescheduleRequests/{reqId} {
      allow read: if isAdmin();
    }
  }
}
