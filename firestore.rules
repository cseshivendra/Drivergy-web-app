
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data, but not other users' data.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;

      // Allow authenticated users to query for other users, e.g., trainers looking for students.
      // The actual readable documents are still protected by the read rule above.
      allow list: if request.auth != null;
    }

    // Allow trainers to read students assigned to them.
    match /users/{studentId} {
       allow get: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.uniqueId.matches('TR.*') && get(/databases/$(database)/documents/users/$(studentId)).data.assignedTrainerId == request.auth.uid;
    }

    // Allow admins to read/write any user document.
    match /users/{userId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Public collections that can be read by anyone.
    match /courses/{courseId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /quizSets/{quizSetId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /faqs/{faqId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
     match /blog/{blogId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /siteBanners/{bannerId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /promotionalPosters/{posterId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Collections accessible only by authenticated users.
    match /rescheduleRequests/{requestId} {
        allow read, write: if request.auth != null;
    }
    
    match /feedback/{feedbackId} {
        allow read, write: if request.auth != null;
    }
    
    match /referrals/{referralId} {
        allow read, write: if request.auth != null;
    }

  }
}
